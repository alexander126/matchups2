<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:excludeFromRecents="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.matchups.pickchamp">
<RelativeLayout
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle">
    <ImageButton
        android:id="@+id/aatrox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/aatrox"
        android:layout_marginStart="5dp"/>
    <ImageButton
        android:id="@+id/ahri1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ahri"
        android:layout_marginStart="5dp"
        />

    <ImageButton
        android:id="@+id/akali1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/akali"
        android:layout_marginStart="5dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layrow2"
        android:layout_below="@+id/layrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle">
        <ImageButton
            android:id="@+id/alistar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/alistar"
            android:layout_marginStart="5dp"/>
        <ImageButton
            android:id="@+id/amumu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/amumu"
            android:layout_marginStart="5dp"
            />

        <ImageButton
            android:id="@+id/anivia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/anivia"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layrow3"
        android:layout_below="@+id/layrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle">
        <ImageButton
            android:id="@+id/annie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/annie"
            android:layout_marginStart="5dp"/>
        <ImageButton
            android:id="@+id/ashe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ashe"
            android:layout_marginStart="5dp"
            />

        <ImageButton
            android:id="@+id/aurelionsol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/aurelionsol"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layrow4"
        android:layout_below="@+id/layrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle">
        <ImageButton
            android:id="@+id/azir1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/azir"
            android:layout_marginStart="5dp"/>
        <ImageButton
            android:id="@+id/bard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/bard"
            android:layout_marginStart="5dp"
            />

        <ImageButton
            android:id="@+id/blitz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/blitzcrank"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
